%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %title= @title || Blog.title
    %link{:href => "/main.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:type => "text/javascript", :src => "http://jqueryjs.googlecode.com/files/jquery-1.3.2.js"}
    :javascript
      $(document).ready(function(){
        $(".trigger").click(function(){
          $(".panel").toggle("fast");
          $(this).toggleClass("active");
          return false;
        });
      });
      
  %body
    #header
      #logo2
        %h1
          %a{:href => "/"}= Blog.title
        %p
          by #{Blog.author}
    %div.panel
      %h3 Hi! I'm Mike.
      %p I'm a graphic designer and product manager in Provo, UT.
        
      %div{:style => "clear:both;"}
        %div.columns
          %div.colleft
            %h4 Something Here	
          %div.colright
            %h4 Social Stuff
    %div{:style => "clear:both;"}
      %a.trigger{:href => "#"} info
      
    #content
      = yield
    #footer
      #legal
        Content and Design by #{Blog.author} | Twitter
        %a{:href => "http://www.twitter.com/michaelmoulton"} @michaelmoulton
